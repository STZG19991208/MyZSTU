/* pages/index/ecardinfo/ecardinfo.wxss */
page {
  background: #FFF;
  padding-bottom: 15rpx;
}
.container{
  width: 100%;
}
.picker {
  position: absolute;
  top: 400rpx;
  right: 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border: 1px solid #31c27c;
  background:#fff;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 12rpx;
  text-align: center;
  padding: 0 20rpx;
  letter-spacing: 5rpx;
  font-size: 32rpx;
}
.picker .down {
  margin-left: 20rpx;
  width: 30rpx;
  height: 30rpx;
}
.card{
  width: 85%;
  border: 1px solid #31c27c;
  border-radius:12rpx;
  box-shadow: 8px 8px 5px rgb(223, 223, 223);
  padding: 20rpx;
  background: #31c27c;
}
.card .cardname{
  position: absolute;
  top: 70rpx;
  right: 75rpx;
  color: #FFF;
  font-weight: bold;
  font-size: 45rpx;
}
.card image{
  margin: 20rpx 0 0 10rpx;
  width: 400rpx;
  height: 90rpx;
}
.card .name{
  color: #fff;
  font-size: 28rpx;
  margin-top: 90rpx;
  margin-left: 20rpx;
}
.card .balance{
  font-weight: bold;
  font-size: 36rpx;
  margin-top: 15rpx;
  margin-left: 15rpx;
  color: #fff;
}
.card .sid{
  color: #fff;
  position: absolute;
  top: 235rpx;
  right: 80rpx;
  font-size: 30rpx;
}
.card .sname{
  color: #fff;
  position: absolute;
  top: 285rpx;
  right: 80rpx;
  font-size: 30rpx;
}
.consumptionheader{
  width: 90%;
  margin-top: 50rpx;
  border-left: 10rpx solid  #31c27c;
  color: #31c27c;
  font-weight: bold;
  padding-left: 10rpx; 
}
.consumption{
  display: flex;
  flex-direction: column;
  background: #fff;
  width: 90%;
  margin-top: 20rpx;
  font-size: 32rpx;
}
.consumption .tip{
  width: 100%;
  display: flex;
  flex-direction: row;
  height: 80rpx;
  line-height: 80rpx;
  justify-content: space-between;
  border-bottom: 1px solid rgb(221, 217, 217);
}
.notice{
  margin-top: 20rpx;
  width: 90%;
  line-height: 60rpx;
  font-size: 30rpx;
  color: #666;
}

